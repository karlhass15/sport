<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Itoris_ProductQa::css/productgrid.css"/>
    </head>
    <body>
        <referenceBlock name="product_tabs">
            <block class="Itoris\ProductQa\Block\Adminhtml\Tab\Tab" name="product-qa-tab.tabs">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Product Q/A</argument>
                    <argument name="url" xsi:type="url" path="itorisproductQa/questions/questionAjax">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">advanced</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-qa-tab</argument>
                <argument name="block" xsi:type="string">product-qa-tab.tabs</argument>
            </action>
        </referenceBlock>
    </body>
</page>
