                            <item name="wysiwyg" xsi:type="boolean">true</item>
                            <item name="dataScope" xsi:type="string">estimated_shipping_text</item>
                            <item name="sortOrder" xsi:type="number">307</item>
                            <item name="rows" xsi:type="number">8</item>
                        </item>
                    </argument>
                </field>

