#!/bin/bash
[ -z "$1" ] && echo "Please specify a dump file, .sql or .sql.gz" && exit

if [[ "$1" == *.sql ]]; then
    cat $1 | sed 's/CREATE\*\/.*TRIGGER/CREATE TRIGGER/g' | docker-compose exec -T db mysql -u sport_dog_food -psport_dog_food sport_dog_food
elif [[ "$1" == *.sql.gz ]]; then
    gunzip -c $1 | sed 's/CREATE\*\/.*TRIGGER/CREATE TRIGGER/g' | docker-compose exec -T db mysql -u sport_dog_food -psport_dog_food sport_dog_food
fi